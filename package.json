{
  "name": "project-local",
  "version": "1.0.0",
  "description": "To represent local merchandise and content creators",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "concurrently": "^7.2.2",
    "date-fns": "^2.28.0",
    "husky": "^7.0.4"
  },
  "scripts": {
    "prepare": "husky install",
    "init-commitizen": "commitizen init cz-conventional-changelog --yarn --dev --exact",
    "run:americano": "cd ./packages/americano && yarn dev",
    "run:affogato": "cd ./packages/affogato && yarn dev",
    "run:espresso": "cd ./packages/espresso && yarn dev",
    "run:ms": "concurrently \"yarn run:americano\" \"yarn run:affogato\"  \"yarn run:espresso\""
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "lerna": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  }
}
